#:kivy 1.10.0
#:import icon kivy.garden.iconfonts.icon
#:import ScrollingLabel ScrollingLabel
#:include ScrollingLabel.kv

<TrackDisplay@ScrollingLabel>:
    font_size: 50

<MetadataDisplay@ScrollingLabel>:
    font_size: 20
    height: 24
    size_hint_y: None
    valign: 'middle'

<TransportButton@Button>:
    font_size: 60
    markup: True
    background_color: 0.4, 0.4, 0.4, 0.7

<TransportToggleButton@ToggleButton>:
    font_size: 60
    markup: True
    background_color: 0.4, 0.4, 0.4, 0.7

<BTMusicDisplay>:
    cols: 1
    padding: 20

    Label:
        text: root.player_name
        size: self.texture_size
        size_hint_y: None

    TrackDisplay:
        text: root.track

    MetadataDisplay:
        text: 'Artist: {}'.format(root.artist)

    MetadataDisplay:
        text: 'Album: {}'.format(root.album)

    #GridLayout:
    #    cols: 2
    #    padding: 0, 20

    #    MetadataDisplay:
    #        text: 'Artist:'
    #    MetadataDisplay:
    #        text: root.artist

    #    MetadataDisplay:
    #        text: 'Album:'
    #    MetadataDisplay:
    #        text: root.album

    BoxLayout:
        height: 40
        size_hint_y: None
        #size_hint_y: 0.2

        padding: 1, 8, 1, 10

        Label:
            markup: True
            text: root.status_display

            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 0.7
                Rectangle:
                    pos: self.pos
                    size: self.width, self.height

                Color:
                    rgba: 0, 1, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.width * (root.position / (root.duration or 1)), self.height

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.5

        TransportToggleButton:
            text: icon('icon-shuffle')
            state: 'down' if root.shuffle else 'normal'
            on_press: root.toggle_shuffle()

        TransportButton:
            text: icon('icon-previous2')
            on_press: root.previous()

        TransportButton:
            text: icon('icon-pause2')
            on_press: root.pause()

        TransportButton:
            text: icon('icon-play3')
            on_press: root.play()

        TransportButton:
            text: icon('icon-next2')
            on_press: root.next()

        TransportToggleButton:
            text: icon('icon-loop')
            state: 'down' if root.repeat else 'normal'
            on_press: root.toggle_repeat()
